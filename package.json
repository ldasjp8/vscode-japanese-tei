{
  "name": "vscode-japanese-tei",
  "publisher": "ldas",
  "displayName": "TEI Japanese Editor",
  "description": "Edit and display TEI/XML",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.66.0"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "homepage": "https://github.com/ldasjp8/vscode-japanese-tei/blob/main/README.md",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ldasjp8/vscode-japanese-tei"
  },
  "keywords": [
    "japanese",
    "tei",
    "xml"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "activationEvents2": [
    "onCommand:vscode-japanese-tei.openPreview",
    "onCommand:vscode-japanese-tei.insertApp",
    "onCommand:vscode-japanese-tei.insertRuby",
    "onCommand:vscode-japanese-tei.insertWarichu"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-japanese-tei.openPreview",
        "title": "generate panel"
      },
      {
        "command": "vscode-japanese-tei.insertApp",
        "title": "insert app"
      },
      {
        "command": "vscode-japanese-tei.insertRuby",
        "title": "insert ruby"
      },
      {
        "command": "vscode-japanese-tei.insertWarichu",
        "title": "insert warichu"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-japanese-tei.openPreview",
        "key": "ctrl+k v",
        "mac": "cmd+k v"
      },
      {
        "command": "vscode-japanese-tei.insertRuby",
        "key": "ctrl+k r",
        "mac": "cmd+k r"
      },
      {
        "command": "vscode-japanese-tei.insertWarichu",
        "key": "ctrl+k w",
        "mac": "cmd+k w"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-japanese-tei.openPreview"
        },
        {
          "command": "vscode-japanese-tei.insertApp"
        },
        {
          "command": "vscode-japanese-tei.insertWarichu"
        },
        {
          "command": "vscode-japanese-tei.insertRuby"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "vscode-japanese-tei",
      "properties": {
        "vscode-japanese-tei.fontSize": {
          "type": "string",
          "default": "1em",
          "description": "Base font size to use for the preview panel",
          "order": 0
        },
        "vscode-japanese-tei.odd": {
          "type": "string",
          "enum": [
            null,
            "vscode-japanese-tei"
          ],
          "default": null,
          "description": "ODD file",
          "order": 1,
          "enumDescriptions": [
            null,
            "縦書き用のODDファイル"
          ]
        },
        "vscode-japanese-tei.useStylesCETEIcean": {
          "type": "boolean",
          "default": true,
          "description": "Use CETEIcean styles",
          "order": 2
        },
        "vscode-japanese-tei.useCustomStyle": {
          "type": "boolean",
          "default": false,
          "description": "Use custom style",
          "order": 3
        },
        "vscode-japanese-tei.customStyle": {
          "editPresentation": "multilineText",
          "type": "string",
          "_default": "#main{overflow-y:auto;writing-mode:vertical-rl}tei-teiHeader{display:none}tei-p{display:block}tei-name{background-color:lightyellow}tei-date{background-color:lightblue}tei-persName{background-color:lightsalmon}tei-placeName{background-color:lightgreen}*[data-type=\"book\"]{color:green}*[data-type=\"page\"]{background-color:gray}tei-lb:after{content:'\\a';white-space:pre}*[data-type=\"割書\"]{display:inline-table;vertical-align:top}tei-seg[data-type=\"warichu-right\"],tei-seg[data-type=\"warichu-left\"]{font-size:50%;display:table-row}*[data-type=\"zodiac\"]{color:royalblue}",
          "description": "Custom style sheet",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}
